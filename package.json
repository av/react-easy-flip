{
  "name": "react-easy-flip",
  "version": "4.0.1",
  "description": "A lightweight React library for smooth FLIP animations",
  "source": "src/index.ts",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "scripts": {
    "build": "microbundle -f modern --jsx React.createElement --no-sourcemap",
    "build:dev": "microbundle -f modern --jsx React.createElement",
    "prepare": "yarn build",
    "format": "prettier --write src/**.ts src/*.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "develop": "yarn start",
    "test": "jest src/"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jlkiri/react-easy-flip.git"
  },
  "keywords": [
    "react",
    "FLIP",
    "animation",
    "transition"
  ],
  "author": "Kirill Vasiltsov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlkiri/react-easy-flip/issues"
  },
  "homepage": "https://github.com/jlkiri/react-easy-flip#readme",
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "devDependencies": {
    "@types/node": "^12.12.5",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "microbundle": "^0.12.0",
    "prettier": "^1.19.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.2.0",
    "typescript": "^3.7.5"
  },
  "files": [
    "lib/**/*"
  ],
  "browserslist": {
    "production": [
      "> 1%",
      "last 2 versions",
      "not dead"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
